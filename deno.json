{
  "name": "@mizchi/ccdiscord",
  "version": "0.0.4",
  "license": "MIT",
  "tasks": {
    "start": "deno run -A --env src/main.ts",
    "dev": "deno run --watch -A --env src/main.ts",
    "check": "deno check src/main.ts",
    "fmt": "deno fmt",
    "lint": "deno lint",
    "test": "deno test src/tests/",
    "start:debug": "deno run -A --env src/main.ts --debug",
    "start:old": "deno run -A --env ccdiscord.ts",
    "deps:update": "sh -c 'rm -f deno.lock && deno cache -r --lock=deno.lock src/main.ts'",
    "claude:diagnose": "deno run -A --env src/tools/claude-diagnose.ts"
  },
  "compilerOptions": {
    "lib": ["deno.window"]
  },
  "exports": {
    ".": "./ccdiscord.ts"
  },
  "fmt": {
    "options": {
      "useTabs": false,
      "lineWidth": 100,
      "indentWidth": 2,
      "singleQuote": false,
      "proseWrap": "preserve"
    }
  },
  "lint": {
    "include": ["*.ts", "*.js"],
    "exclude": ["node_modules/"],
    "rules": {
      "tags": ["recommended"],
      "include": [],
      "exclude": []
    }
  },
  "imports": {
    "@anthropic-ai/claude-code": "npm:@anthropic-ai/claude-code@latest",
    "@david/dax": "jsr:@david/dax@^0.43.2",
    "@std/fs": "jsr:@std/fs@^1.0.19",
    "@std/path": "jsr:@std/path@^1.1.1",
    "discord.js": "npm:discord.js@^14.21.0",
    "discord-cf": "npm:discord-cf@latest"
  }
}
